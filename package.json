{
  "name": "database-viewer",
  "author": "Remco Stoeten",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/server.ts",
    "dev:all": "concurrently \"bun run dev\" \"cd frontend-svelte && npm run dev\"",
    "build": "bun build src/server.ts --outdir=dist --target=bun",
    "start": "bun run dist/server.js",
    "build:frontend": "cd frontend-svelte && npm run build",
    "dev:frontend": "cd frontend-svelte && npm run dev"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cookie": "^1.0.2",
    "hono": "^4.6.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/better-sqlite3": "^7.6.8",
    "@types/cookie": "^1.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.10.9",
    "bun-types": "^1.0.0",
    "concurrently": "^9.2.0"
  }
}
