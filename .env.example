# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/dbname
SQLITE_PATH=./sample.db

# Server Configuration
PORT=3002
NODE_ENV=development
API_BASE_URL=http://localhost:3002

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-here-change-this-in-production
COOKIE_SECRET=your-super-secret-cookie-key-here-change-this-in-production
SECURE_COOKIES=false

# Database Connections
DEFAULT_CONNECTION_ID=sample-db
SYSTEM_DB_PATH=./system.db

# Cloud Database Settings (Optional)
CLOUD_POSTGRES_URL=
SUPABASE_URL=
SUPABASE_ANON_KEY=
NEON_DATABASE_URL=
RAILWAY_DATABASE_URL=

# Security Headers
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# External Services (Optional)
REDIS_URL=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
